apiVersion: apps/v1
kind: Deployment
metadata:
  app: httpbin
  name: httpbin
spec:
  replicas: {{ openshift_app_replicas | default(1) }}
  selector:
    matchLabels:
      app: httpbin
  template:
    metadata:
      labels:
        app: httpbin
    spec:
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            - labelSelector:
                matchExpressions:
                - key: app
                  operator: In
                  values:
                  - httpd
              topologyKey: kubernetes.io/hostname
      containers:
        - name: httpbin
          env:
            - name: HTTPBIN_HOST
              value: '[::]'
{% if dci_disconnected | default(false) | bool %}
          image: {{ openshift_app_registry }}/{{ '/'.join(openshift_app_image.split('/')[1:]) }}
{% else %}
          image: {{ openshift_app_image }}
{% endif %}
{% if openshift_app_cmds is defined and openshift_app_cmds| length %}
          command: {{ openshift_app_cmds }}
{% endif %}
          ports:
            - containerPort: 8080
              protocol: TCP
          livenessProbe:
            failureThreshold: 3
            httpGet:
              path: /
              port: 8080
            scheme: HTTP
          initialDelaySeconds: 30
          periodSeconds: 30
          successThreshold: 1
